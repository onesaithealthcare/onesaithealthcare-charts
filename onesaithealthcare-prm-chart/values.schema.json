{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "environment": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["dev", "prod"],
          "default": "dev",
          "description": "Selecciona el tipo de entorno (dev o prod)"
        }
      },
      "required": ["type"]
    },
    "domain": {
      "type": "object",
      "properties": {
        "protocol": {
          "type": "string",
          "enum": ["http", "https"],
          "description": "Protocolo del dominio (http o https)"
        },
        "host": {
          "type": "string",
          "description": "Introduce el host del dominio"
        },
        "istio": {
          "type": "boolean",
          "default": false,
          "description": "¿Istio habilitado?"
        }
      },
      "required": ["protocol", "host", "istio"]
    },
    "docker": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "default": "docksdtr.indra.es",
              "description": "Host del registro Docker"
            },
            "project": {
              "type": "string",
              "default": "multhn_cmhn20_2",
              "description": "Proyecto del registro Docker"
            }
          },
          "required": ["host", "project"]
        }
      },
      "required": ["registry"]
    },
    "prm": {
      "type": "object",
      "properties": {
        "app": {
          "type": "object",
          "properties": {
            "namespace": {
              "type": "string",
              "default": "oh-release",
              "description": "Namespace de la aplicación PRM"
            },
            "host": {
              "type": "string",
              "default": "oh-release.apps.lab.openshift.com",
              "description": "Host de la aplicación PRM"
            },
            "backend_app": {
              "type": "string",
              "default": "ohprm-api",
              "description": "Nombre del backend de la aplicación PRM"
            },
            "front_app": {
              "type": "string",
              "default": "ohprm-front",
              "description": "Nombre del frontend de la aplicación PRM"
            },
            "url_server": {
              "type": "string",
              "default": "https://oh-release.apps.lab.openshift.com",
              "description": "URL del servidor de la aplicación PRM"
            },
            "url_prof_server": {
              "type": "string",
              "default": "https://oh-release-prof.apps.lab.openshift.com",
              "description": "URL del servidor de profesional de la aplicación PRM"
            },
            "cipaut": {
              "type": "string",
              "default": "2.16.724.4.40.222",
              "description": "Identificador CIPAUT de la aplicación PRM"
            }
          },
          "required": [
            "namespace",
            "host",
            "backend_app",
            "front_app",
            "url_server",
            "url_prof_server",
            "cipaut"
          ]
        },
        "version": {
          "type": "object",
          "properties": {
            "back_image_tag": {
              "type": "string",
              "default": "4.6.0",
              "description": "Etiqueta de la imagen del backend"
            },
            "front_image_tag": {
              "type": "string",
              "default": "4.6.0",
              "description": "Etiqueta de la imagen del frontend"
            }
          },
          "required": ["back_image_tag", "front_image_tag"]
        }
      },
      "required": ["app", "version"]
    }
  },
  "required": ["environment", "domain", "docker", "prm"]
}