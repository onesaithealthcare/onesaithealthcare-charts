{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "onesaithealthcare-ohsso-chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHSSO module"
        },
        "ohsso": {
          "type": "object",
          "properties": {
            "db": {
              "type": "object",
              "properties": {
                "adminpassword": {
                  "type": "string",
                  "description": "OHSSO initial adminpassword"
                },
                "user": {
                  "type": "string",
                  "default": "us_keycloak",
                  "description": "OHSSO db user"
                },
                "pass": {
                  "type": "string",
                  "description": "OHSSO db password"
                }
              },
              "dependencies": {
                "adminpassword": ["enabled"],
                "user": ["enabled"],
                "pass": ["enabled"]
              }
            }
          }
        }
      }
    },
    "onesaithealthcare-ohatn-chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHATN module"
        }
      }
    },
    "onesaithealthcare-ohcon-chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHCON module"
        }
      }
    },
    "onesaithealthcare-ohcat-chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHCAT module"
        }
      }
    },
    "onesaithealthcare-ohaut-chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHAUT module"
        }
      }
    },
    "onesaithealthcare-ohmpi-chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHMPI module"
        }
      }
    },
    "global": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["dev", "prod"],
              "default": "dev",
              "description": "Environment type"
            }
          }
        },
        "domain": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string",
              "enum": ["http", "https"],
              "description": "Domain protocol"
            },
            "host": {
              "type": "string",
              "description": "Domain host"
            },
            "istio": {
              "type": "boolean",
              "default": false,
              "description": "Use Istio"
            }
          }
        },
        "database": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["mysql", "oracle"],
              "default": "mysql",
              "description": "Database type"
            },
            "mysql": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "description": "MySQL URL"
                },
                "properties": {
                  "type": "string",
                  "default": "?serverTimezone=UTC",
                  "description": "MySQL properties"
                }
              }
            },
            "oracle": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "description": "Oracle URL"
                },
                "properties": {
                  "type": "string",
                  "description": "Oracle properties"
                }
              }
            }
          }
        },
        "docker": {
          "type": "object",
          "properties": {
            "use": {
              "type": "object",
              "properties": {
                "default_oh_registry": {
                  "type": "boolean",
                  "default": true,
                  "description": "Use default OH registry"
                }
              }
            },
            "registry": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string",
                  "default": "docksdtr.indra.es",
                  "description": "Docker registry host"
                },
                "project": {
                  "type": "string",
                  "default": "multhn_cmhn20_2",
                  "description": "Docker registry project"
                }
              }
            }
          }
        }
      }
    }
  }
}