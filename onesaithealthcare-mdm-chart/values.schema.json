{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "onesaithealthcare-ohsso-chart": {
      "type": "object",
      "properties": {
        "ohsso": {
          "type": "object",
          "properties": {
            "db": {
              "type": "object",
              "properties": {
                "schema": {
                  "type": "string",
                  "default": "us_ohsso",
                  "description": "OHSSO schema (usually same as user)"
                },
                "adminpassword": {
                  "type": "string",
                  "description": "OHSSO initial adminpassword"
                },
                "user": {
                  "type": "string",
                  "default": "us_ohsso",
                  "description": "OHSSO db user"
                },
                "pass": {
                  "type": "string",
                  "description": "OHSSO db password"
                }
              }
            }
          }
        }
      }
    },
    "onesaithealthcare_ohmpi_chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHMPI module"
        }
      }
    },
    "onesaithealthcare_ohcon_chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHCON module"
        },
        "ohcon": {
          "type": "object",
          "properties": {
            "db": {
              "type": "object",
              "properties": {
                "schema": {
                  "type": "string",
                  "default": "us_hnconf",
                  "description": "OHCON schema (usually same as user)"
                },
                "user": {
                  "type": "string",
                  "default": "us_hnconf",
                  "description": "OHCON db user"
                },
                "pass": {
                  "type": "string",
                  "description": "OHCON db password"
                }
              }
            }
          }
        }
	}
    },    
	"onesaithealthcare_ohatn_chart": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable OHATN module"
        },
        "ohatn": {
          "type": "object",
          "properties": {
            "db": {
              "type": "object",
              "properties": {
                "schema": {
                  "type": "string",
                  "default": "us_hnatna",
                  "description": "OHATN schema (usually same as user)"
                },
                "user": {
                  "type": "string",
                  "default": "us_hnatna",
                  "description": "OHATN db user"
                },
                "pass": {
                  "type": "string",
                  "description": "OHATN db password"
                }
              }
            }
          }
        }
	}
    },
    "global": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["dev", "prod"],
              "default": "dev",
              "description": "Environment type"
            }
          }
        },
        "domain": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string",
              "enum": ["http", "https"],
              "description": "Domain protocol"
            },
            "host": {
              "type": "string",
              "description": "Domain host"
            },
            "gateway_type": {
              "type": "string",
              "enum": ["istio", "k8s_gateway"],
              "default": "k8s_gateway",
              "description": "Gateway type"
            }
          }
        },
        "database": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["mysql", "oracle"],
              "default": "mysql",
              "description": "Database type"
            },
            "host": {
              "type": "string",
              "description": "Database host"
            },
            "port": {
              "type": "string",
              "description": "Database port"
            },
            "properties": {
              "type": "string",
			  "default" : "",
              "description": "Database properties (for example: ?serverTimezone=UTC)"
            },
            "oracle_sid": {
              "type": "string",
              "description": "Oracle SID (only needed for Oracle)"
            },
            "oracle_partitioning": {
              "type": "boolean",
              "description": "Oracle partitioning enabled (only needed for Oracle)"
            }
          },
		  "required" : [ "type", "host", "port", "properties" ]
        },
        "docker": {
          "type": "object",
          "properties": {
            "registry": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string",
                  "default": "docksdtr.indra.es",
                  "description": "Docker registry host"
                },
                "project": {
                  "type": "string",
                  "default": "multhn_cmhn20_2",
                  "description": "Docker registry project"
                }
              }
            }
          }
        }
      }
    }
  }
}