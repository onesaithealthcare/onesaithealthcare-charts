{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string",
              "enum": ["http", "https"],
              "default": "http",
              "description": "Domain protocol"
            },
            "host": {
              "type": "string",
              "default": "",
              "description": "Domain host"
            },
            "istio": {
              "type": "boolean",
              "default": false,
              "description": "Use Istio"
            }
          }
        }
      }
    }
  }
}