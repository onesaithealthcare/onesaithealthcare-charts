{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "ohsso": {
      "type": "object",
      "properties": {
        "db": {
          "type": "object",
          "properties": {
            "adminpassword": {
              "type": "string",
              "description": "OHSSO initial adminpassword"
            },
            "user": {
              "type": "string",
              "default": "us_keycloak",
              "description": "OHSSO db user"
            },
            "pass": {
              "type": "string",
              "description": "OHSSO db password"
            }
          }
        }
      }
    },
    "global": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["dev", "prod"],
              "default": "dev",
              "description": "Environment type"
            }
          }
        },
        "domain": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string",
              "enum": ["http", "https"],
              "description": "Domain protocol"
            },
            "host": {
              "type": "string",
              "description": "Domain host"
            },
            "gateway-type": {
              "type": "string",
              "enum": ["istio", "k8s-gateway"],
              "default": "k8s-gateway",
              "description": "Gateway type"
            }
          }
        },
        "database": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["mysql", "oracle"],
              "default": "mysql",
              "description": "Database type"
            },
            "mysql": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "description": "MySQL URL"
                },
                "properties": {
                  "type": "string",
                  "default": "?serverTimezone=UTC",
                  "description": "MySQL properties"
                }
              }
            },
            "oracle": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "description": "Oracle URL"
                },
                "properties": {
                  "type": "string",
                  "description": "Oracle properties"
                }
              }
            }
          }
        },
        "docker": {
          "type": "object",
          "properties": {
            "use": {
              "type": "object",
              "properties": {
                "default_oh_registry": {
                  "type": "boolean",
                  "default": true,
                  "description": "Use default OH registry"
                }
              }
            },
            "registry": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string",
                  "default": "docksdtr.indra.es",
                  "description": "Docker registry host"
                },
                "project": {
                  "type": "string",
                  "default": "multhn_cmhn20_2",
                  "description": "Docker registry project"
                }
              }
            }
          }
        }
      }
    }
  }
}